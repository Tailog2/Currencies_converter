<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/convert_km_to_miles"
            android:layout_height="60dp" android:id="@+id/buttonConvKmToMiles"
            android:background="@drawable/shadow_and_corners"
            app:layout_constraintTop_toBottomOf="@+id/buttonConvMilesToKm" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="108dp"
            android:layout_marginRight="108dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:width="200dp" android:layout_width="0dp"/>
    <EditText
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextKm"
            android:textSize="30sp" android:width="200dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextMiles" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" android:layout_marginEnd="56dp" android:layout_marginRight="56dp"
            android:layout_width="0dp" android:importantForAutofill="no" tools:ignore="LabelFor"/>
    <TextView
            android:text="@string/miles"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="30sp" android:textColor="#000000"
            app:layout_constraintEnd_toStartOf="@+id/editTextMiles" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="208dp" android:layout_width="0dp"/>
    <EditText
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextMiles"
            android:textSize="30sp" android:width="200dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="188dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp" android:layout_width="0dp" android:importantForAutofill="no"
            android:inputType="numberDecimal" tools:ignore="LabelFor"/>
    <TextView
            android:text="@string/km"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textSize="30sp" android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="48dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextKm" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:layout_width="0dp"/>
    <Button
            android:text="@string/convert_miles_to_km"
            android:layout_height="60dp" android:id="@+id/buttonConvMilesToKm"
            android:background="@drawable/shadow_and_corners" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp" android:layout_marginRight="108dp" android:width="200dp"
            android:layout_width="0dp" app:layout_constraintTop_toBottomOf="@+id/editTextKm"
            android:layout_marginTop="120dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>